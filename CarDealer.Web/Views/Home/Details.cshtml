@model CarDealer.Core.Core.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">Car Details</h2>
        </div>
        <div class="card-body">
            <h3 class="text-info">@Model.Make @Model.Model (@Model.Year)</h3>
            <hr />
            <p><strong>Price:</strong> <span class="text-success">₦@Model.Price</span></p>
            <p><strong>Description:</strong> @Model.Description</p>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <img src="@Model.ImageUrl" alt="@Model.Model" class="img-fluid rounded shadow-sm" style="max-height: 300px; width: auto;" />
                </div>
            }
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to List</a>
            <div>
                <a asp-action="SubmitInquiry" asp-controller="Home" asp-route-carId="@Model.Id" class="btn btn-warning btn-sm">Submit Inquiry</a>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .card {
        border-radius: 8px;
    }

    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }

    .card-title {
        margin: 0;
    }

    .btn-warning {
        margin-right: 5px;
    }

    img {
        max-width: 100%;
        height: auto;
    }
</style>
