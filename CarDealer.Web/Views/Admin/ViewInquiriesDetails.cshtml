@model CarDealer.Core.Core.Models.Inquiry

@{
    ViewData["Title"] = "Inquiry Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Inquiry Details</h2>
        </div>
        <div class="card-body">
            <h4>User Information</h4>
            <div class="mb-3">
                <strong>Name:</strong> @Model.Name
            </div>
            <div class="mb-3">
                <strong>Email:</strong> @Model.Email
            </div>
            <div class="mb-3">
                <strong>Message:</strong> @Model.Message
            </div>
            <div class="mb-3">
                <strong>Submitted On:</strong> @Model.CreatedAt.ToString("f")
            </div>

            <hr />

            <h4>Car Information</h4>
            @if (Model.Car != null)
            {
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div>
                            <strong>Car Make & Model:</strong> @Model.Car.Make @Model.Car.Model
                        </div>
                        <div>
                            <strong>Year:</strong> @Model.Car.Year
                        </div>
                        <div>
                            <strong>Price:</strong> ₦@Model.Car.Price
                        </div>
                        <div>
                            <strong>Description:</strong> @Model.Car.Description
                        </div>
                    </div>
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.Car.ImageUrl))
                        {
                            <img src="@Model.Car.ImageUrl" alt="Car Image" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                    </div>
                </div>
            }
            else
            {
                <p>Car details not available.</p>
            }

            <a href="@Url.Action("InquiriesList", "Admin")" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-bottom: 2px solid #0056b3;
    }

    .container {
        max-width: 800px;
        margin: auto;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }
</style>
